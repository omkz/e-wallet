<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-half">
                <h1 class="title">Form Transfer:</h1>
                <%= form_with model: @transfer, url: "/transactions/transfers",local: true, method: "post" do |f| %>
                    <div class="field">
                        <%= f.label 'amount', class: "label" %>
                        <div class="control">
                            <%= f.text_field :amount, class: "input" %>
                        </div>
                    </div>
                    <div class="field">
                        <%= f.label 'Transfer To', class: "label" %>
                        <div class="control">
                            <%= f.text_field :to_id, class: "input" %>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <%= f.submit "Submit", class: 'button is-primary' %>
                        </div>
                    </div>
                <% end %>

            </div>
        </div>
    </div>
</section>




